<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/rojo"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="167dp"
        android:layout_marginEnd="22dp"
        android:backgroundTint="#FF0000"
        android:text="Rojo"
        app:layout_constraintBottom_toTopOf="@+id/azul"
        app:layout_constraintEnd_toStartOf="@+id/verde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/verde"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="513dp"
        android:backgroundTint="#44FF00"
        android:text="Verde"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rojo"
        app:layout_constraintTop_toBottomOf="@+id/Ronda" />

    <Button
        android:id="@+id/azul"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="93dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="462dp"
        android:backgroundTint="#052AE3"
        android:text="Azul"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/amarillo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rojo" />

    <Button
        android:id="@+id/amarillo"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="204dp"
        android:backgroundTint="#FFE500"
        android:text="Amarillo"
        app:layout_constraintBottom_toTopOf="@+id/jugar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/azul"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/jugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="209dp"
        android:backgroundTint="#000000"
        android:text="Jugar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amarillo" />

    <TextView
        android:id="@+id/Ronda"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="75dp"
        android:text="Ronda"
        app:layout_constraintBottom_toTopOf="@+id/verde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>